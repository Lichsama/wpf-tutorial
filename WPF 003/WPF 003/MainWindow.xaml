<Window x:Class="WPF_003.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_003"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="Click me!" Click="Button_Click" Width="150" Height="150"></Button>
        <Button Content="Click me!" MouseUp="Button_MouseUp" Width="150" Height="150" Margin="60" HorizontalAlignment="Left"></Button>
        <Button Content="Click me!" PreviewMouseUp="Button_PreviewMouseUp" Width="150" Height="150" Margin="60" HorizontalAlignment="Right"></Button>
        <Button Content="Click me!" PreviewMouseLeftButtonDown="Button_PreviewMouseLeftButtonDown" PreviewMouseRightButtonUp="Button_PreviewMouseRightButtonUp" Width="150" Height="50" Margin="40" HorizontalAlignment="Center" VerticalAlignment="Bottom"></Button>
    </Grid>
</Window>
